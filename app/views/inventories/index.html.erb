<h1 class="text-center py-4">Inventories list</h1>
<% @inventories.each do |inventory| %>
  <div class="card border-secondary mb-2" style="width: 100%;">
    <div class="card-body text-secondary d-flex justify-content-between align-items-center">
      <div style="width: 30%;">
        <h5 class="card-title"><a href="<%= inventory_path(inventory) %>" class="text-decoration-none text-uppercase font-weight-bold"><%= inventory.name %></a></h5>
          <% if can? :manage, inventory %>
            <%= button_to "REMOVE", inventory_delete_path(inventory_id: inventory.id), method: :delete, data: { turbo_confirm: "Are you sure? "}, class: "text-decoration-none text-danger", class: "btn btn-danger" %>
          <% else %>
            <%= button_to "Inactive", root_path, class: "btn btn-secondary disabled", method: :delete%>
          <% end %>
      </div>
      <p class="text-dark" style="width: 68%;">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
  </div>
<% end %>
