<header class="d-flex justify-content-center align-items-center">
     <h1 class="display-4"> <strong>
        Public Recipes
     </strong></h1>
</header>

<% @public_recipes.each do |public_recipe| %>
  <div class="card border-secondary mb-2" style="width: 100%;">
    <div class="card-body text-secondary d-flex justify-content-between align-items-center">
      <div style="width: 80%;", class="d-flex justify-content-between mt-4 mb-4">
        <div>
            <h3 class="card-title"><a href="<%=  recipe_path(public_recipe) %>" class="text-decoration-none text-uppercase font-weight-bold"><%= public_recipe.name %></a></h3>
            <h5 class="card-title">
              by <%= public_recipe.user.name %>
            </h5>
        </div>
        

        <div>
            <h5 class="card-title">
              <strong>
                Total food items: 
              </strong>
              <%= public_recipe.recipe_foods.count %>
            </h5>
            <h5 class="card-title">
             <strong>
                Total price: 
              </strong>
              <% price = 0 %>
              <% public_recipe.recipe_foods.each do |recipe_food| %>
                <%price_each_food_item = recipe_food.food.price * recipe_food.quantity %>
                <%price += price_each_food_item%>
              <% end %>
              $<%= price%>
            </h5>
        </div>

      </div>
      
    </div>
  </div>
<% end %>
